# {{ ansible_managed }}

[DEFAULT]
ignoreip  = 127.0.0.1 {{ ansible_default_ipv4['address'] }} {{ fail2ban_whitelist }}
bantime   = 86400
destemail = fail2ban@blocklist.de 
sendermail = {{ 'mail@' + ansible_fqdn }}
banaction = iptables-multiport
action    = %(action_mwl)s

# JAILS
[ssh]
enabled   = true
maxretry  = 3
 
[pam-generic]
enabled   = true
banaction = iptables-allports
 
[ssh-ddos]
enabled   = true

[apache]
enabled = true
 
[postfix]
enabled  = true
maxretry = 1