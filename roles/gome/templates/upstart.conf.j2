description "Gome"
author "Kristjan Rang"

#start on (local-filesystems and net-device-up IFACE=eth0)
#stop on shutdown

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 5 60 #try 5 times within 60 seconds, or giveup

env PORT=4000

chdir /home/deploy/gome

script
    echo $$ > /var/run/gome.pid
    exec /home/deploy/gome/gome >> /var/log/gome.log 2>&1
end script

pre-start script
    echo "\n[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/gome.log
end script

pre-stop script
  rm /var/run/gome.pid
  echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping\n" >> /var/log/gome.log
end script