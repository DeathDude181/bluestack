# {{ ansible_managed }}

upstream netdata {
    server 127.0.0.1:{{ netdata_port }} fail_timeout=0;
    keepalive 64;
}

server {
  listen [::]:80;
  listen 80;

  server_name {{ netdata_domain }};
  rewrite ^ https://$server_name$request_uri? permanent;

  include snippets/le.conf;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  ssl on;

  ssl_certificate {{ simp_le_root }}{{ netdata_domain }}/fullchain.pem;
  ssl_certificate_key {{ simp_le_root }}{{ netdata_domain }}/key.pem;

  server_name {{ netdata_domain }};

  root {{ netdata_conf }}/;
  index index.html index.htm;

  add_header Strict-Transport-Security max-age=31536000;

  error_log   /var/log/nginx/{{ netdata_domain }}-error.log;
  access_log  /var/log/nginx/{{ netdata_domain }}-access.log;

  auth_basic              "Stats";
  auth_basic_user_file    /etc/nginx/htpasswd/netdata;

  location / {
    try_files $uri @netdata;
  }

  location @netdata {
    proxy_set_header        Host $host;
    proxy_set_header        X-Real-IP $remote_addr;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header        X-Forwarded-Proto https;
    proxy_redirect          http:// https://;

    proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;

    proxy_connect_timeout      90;
    proxy_send_timeout         90;
    proxy_read_timeout         90;

    proxy_buffer_size          4k;
    proxy_buffers              4 32k;
    proxy_busy_buffers_size    64k;
    proxy_temp_file_write_size 64k;
    proxy_max_temp_file_size 0;

    client_max_body_size    10m;
    client_body_buffer_size 128k;

    if (!-f $request_filename) {
      proxy_pass http://netdata;
      break;
    }
  }

  include snippets/le.conf;
}
