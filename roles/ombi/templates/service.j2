[Unit]
Description=ombi
After=network-online.target

[Service]
Environment=DIR={{ ombi_install_dir }}
Environment=LC_ALL=en_US.UTF-8
Environment=LANG=en_US.UTF-8
ExecStart=/usr/bin/mono --debug {{ ombi_install_dir }}/Release/Ombi.exe -p {{ ombi_port }}
Type=simple
User={{ ombi_user }}
Group=media
Restart=always
RestartSec=2
StartLimitInterval=60s
StartLimitBurst=3
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
