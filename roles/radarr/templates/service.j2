[Unit]
Description=radarr
After=network-online.target

[Service]
Environment=DIR={{ radarr_install_dir }}
Environment=LC_ALL=en_US.UTF-8
Environment=LANG=en_US.UTF-8
ExecStart=/usr/bin/mono --debug {{ radarr_install_dir }}/Radarr.exe  --NoRestart
Type=simple
User={{ radarr_user }}
Group=media
Restart=always
RestartSec=2
StartLimitInterval=60s
StartLimitBurst=3
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
