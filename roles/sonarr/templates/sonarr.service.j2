[Unit]
Description=sonarr
After=network.target

[Service]
Environment=DIR={{ sonarr_install_dir }}
Environment=LC_ALL=en_US.UTF-8
Environment=LANG=en_US.UTF-8
ExecStart=/bin/sh -c '/usr/bin/mono --debug {{ sonarr_install_dir }}/NzbDrone.exe'
Type=simple
User={{ sonarr_user }}
Group=media
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
